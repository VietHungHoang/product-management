extend ../../layouts/default.pug

block main 
    h1 Products List

    .card-md-3 
    .card-header Bộ lọc và tìm kiếm 
    .card-body 
        button(
            class="btn btn-sm ml-1 btn-outline-success active"
            button-status=""
        ) Tất cả
         button(
            class="btn btn-sm ml-1 btn-outline-success"
            button-status="active"
        ) Hoạt động
         button(
            class="btn btn-sm ml-1 btn-outline-success"
            button-status="inactive"
        ) Không hoạt động

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng thái 
                th Hành động 
        
        tbody 
            each item, index in products
                tr 
                    th #{index}
                    td 
                        img(
                            src= item.thumbnail
                            alt= item.title
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td #{item.price}$
                    td
                        if(item.status == "active") 
                            a(href="#" class="badge badge-success") Hoạt động
                        else
                            a(href="#" class="badge badge-danger") Dừng hoạt động
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xoá